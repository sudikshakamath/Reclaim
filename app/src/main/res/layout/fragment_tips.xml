<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient4"
    tools:context=".TipsFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/findrehab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/raleway_medium"
        android:layout_below="@id/textrehab"
        android:text="Find Rehab Centres Nearby"
        android:textColor="@color/black"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/hospital"
        android:layout_centerInParent="true"
        android:layout_above="@+id/textrehab"/>

    <TextView
        android:id="@+id/textrehab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/raleway_medium"
        android:padding="20dp"
        android:text="welcome to the first step in finding rehab centres near you!"
        android:textColor="@color/white"
        android:textSize="25sp"

        />
</RelativeLayout>

