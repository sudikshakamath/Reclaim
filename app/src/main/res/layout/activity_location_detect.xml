<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/projectblue"
    tools:context=".location_detect">

    <!-- TODO: Update blank fragment layout -->
    <fragment
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map"
        android:layout_centerHorizontal="true"
        android:id="@+id/citytag"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/raleway_medium"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/citytag"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:text="Find Rehab centres Nearby"
        android:id="@+id/button_find_maids"
        android:backgroundTint="@color/white"
        android:textColor="@color/projectblue"
        />

</RelativeLayout>

